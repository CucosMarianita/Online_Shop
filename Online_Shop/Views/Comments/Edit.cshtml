@model Online_Shop.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<h2>Editare comentariu</h2>
<br />


@using (Html.BeginForm(controllerName: "Comments", actionName: "Edit",
      method: FormMethod.Post, routeValues: new { id = Model.Id }))

{
    @Html.Label("Rating", "Rating produs")
    <br/>
    <div>
        @Html.RadioButtonFor(m => m.Rating,"1", new { @class="radio-inline"})
        1
        @Html.RadioButtonFor(m => m.Rating,"2", new { @class="radio-inline"})
        2
        @Html.RadioButtonFor(m => m.Rating,"3", new { @class="radio-inline"})
        3
        @Html.RadioButtonFor(m => m.Rating,"4", new { @class="radio-inline"})
        4
        @Html.RadioButtonFor(m => m.Rating,"5", new { @class="radio-inline"})
        5
    </div>

    <br/>
    @Html.Label("Content", "Continut comentariu")

    <br />

    @Html.Editor("Content", new { @class = "form-control" })
    <br />

    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

    <br />
    <br />

    <button class="btn  btn-primary" type="submit">Editeaza comentariul</button>

}




