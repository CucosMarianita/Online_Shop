<div class="card" style="width: 25rem; background-color:floralwhite">
      
    <img class="card-img-top" src="@Model.Image" width="450" height="600" >
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <div class="card-text">@Model.Content</div>
        <div><i class="bi bi-list-columns"></i> @Model.Category.CategoryName</div>

        <div><i class="bi bi-person-vcard-fill"></i> @Model.User.UserName</div>
        

        <span class="bi bi-tag">@Model.Price</span>
        
    </div>
</div> 



